manifest {
  description = 'TnPrep: Transposon preprocessing pipeline for prokaryotes' 
  homePage = 'https://github.com/MDHowe4/TnPrep'
  author = 'Michael Howe'
  mainScript = 'main.nf'
  nextflowVersion = '>=22.10.6'
} 


params {
    // Pipeline Options
    help = false
    input = false
    genome = false
    output = "${baseDir}/outdir"

}



profiles {
  conda {
    process.conda = "$baseDir/environment.yml"
  }  
}